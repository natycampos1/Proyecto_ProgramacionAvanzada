<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewBag.Title - Buses Pura Vida</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

    <!-- TU CSS PERSONALIZADO -->
    <link rel="stylesheet" href="@Url.Content("~/Template/css/layout.css")" />
</head>

<body>

    <!-- ===== SIDEBAR IZQUIERDO ===== -->
    <div class="sidebar" id="sidebar">
        <h4><i class="bi bi-bus-front"></i> Buses PV</h4>

        <a href="@Url.Action("Inicio", "Home")">
            <i class="bi bi-speedometer2"></i> Inicio
        </a>

        <a href="@Url.Action("About", "Home")">
            <i class="bi bi-house"></i> Página Principal
        </a>

        <a href="@Url.Action("Informacion", "Home")">
            <i class="bi bi-info-circle"></i> Información
        </a>

        <a href="@Url.Action("Horario", "Home")">
            <i class="bi bi-clock-history"></i> Horarios y Rutas
        </a>
    </div>


    <!-- ===== CONTENIDO DERECHO ===== -->
    <div class="content">

        <!-- TOPBAR -->
        <div class="topbar d-flex justify-content-between align-items-center">

            <!-- Botón para celular -->
            <button class="btn btn-outline-primary d-md-none" onclick="toggleSidebar()">
                <i class="bi bi-list"></i>
            </button>

            <h5 class="mb-0">@ViewBag.Title</h5>

            <span class="text-muted">Sistema de Control y Asistencia</span>
        </div>


        <!-- CONTENIDO DE LAS VISTAS -->
        <div class="card border-0 shadow-sm p-4">
            @RenderBody()
        </div>


        <!-- FOOTER -->
        <footer class="text-center mt-4 text-muted">
            ©Programación Avanzada 2026
        </footer>

    </div>


    <!-- SCRIPT PARA MOSTRAR/OCULTAR SIDEBAR EN CELULAR -->
    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("active");
        }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>