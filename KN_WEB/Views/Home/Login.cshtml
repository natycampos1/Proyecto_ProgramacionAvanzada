@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<h3 class="text-center mb-2">Crear Cuenta</h3>
<p class="text-center text-muted mb-4">Complete la información para registrarse</p>

<form>

    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input type="text" class="form-control" required>
    </div>

    <div class="mb-3">
        <label class="form-label">Apellido</label>
        <input type="text" class="form-control" required>
    </div>

    <div class="mb-3">
        <label class="form-label">Correo Electrónico</label>
        <input type="email" class="form-control" required>
    </div>

    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input type="password" class="form-control" required>
    </div>

    <div class="mb-4">
        <label class="form-label">Confirmar Contraseña</label>
        <input type="password" class="form-control" required>
    </div>

    <button type="submit" class="btn btn-primary w-100">
        Registrarse
    </button>

    <div class="text-center mt-3">
        <a href="@Url.Action("Inicio", "Home")">¿Ya tienes cuenta? Inicia sesión</a>
    </div>

</form>