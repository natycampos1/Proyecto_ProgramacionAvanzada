@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<h3 class="text-center mb-3">Buses Pura Vida</h3>
<h5 class="text-center text-muted mb-4">Iniciar Sesión</h5>

<form method="post" action="@Url.Action("Login", "Home")">

    <div class="mb-3">
        <label class="form-label">Correo Electrónico</label>
        <input type="email" name="Email" class="form-control" required>
    </div>

    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input type="password" name="Password" class="form-control" required>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" name="Remember">
        <label class="form-check-label">Recordarme</label>
    </div>

    <button type="submit" class="btn btn-primary w-100">
        Ingresar
    </button>

    <div class="text-center mt-3">
        <a href="#">¿Olvidaste tu contraseña?</a>
    </div>

    <div class="text-center mt-2">
        <a href="@Url.Action("Login","Home")">¿No tienes cuenta? Regístrate</a>
    </div>

</form>